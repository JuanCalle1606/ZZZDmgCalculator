@using ZZZDmgCalculator.Models.State
@inherits MainComponent

<RadzenTabs	class="no-border-tabs setup-tabs" RenderMode="TabRenderMode.Server">
	<Tabs>
		<RadzenTabsItem Text=@Lang["Equipment"] class="adaptive-tab-item">
			<EquipmentSetup Agent="TeamState.Agents[State.CurrentAgentIndex]"/>
		</RadzenTabsItem>
		<RadzenTabsItem Text=@Lang["Team"] class="adaptive-tab-item">
			<TeamSetup Team="TeamState"/>
		</RadzenTabsItem>
	</Tabs>
</RadzenTabs>

@code {

	[Parameter]
	public SetupState TeamState { get; set; } = null!;

}