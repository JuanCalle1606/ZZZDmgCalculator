@inherits MainComponent

<RadzenCard Variant="Variant.Flat" class="rz-background-color-base-900 rz-p-3 rz-mb-3">
	<RadzenStack>
		<RadzenText>@Lang["EnemyInfo"]</RadzenText>
		<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
			<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
				<RadzenLabel>@Lang["Level"]:</RadzenLabel>
				<RadzenNumeric Min="1" Max="70" TValue="int" Value="Enemy.Level" ValueChanged="ChangeLevel" Style="max-width: 50px"/>
			</RadzenStack>
			<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
				<RadzenLabel>@Lang["BaseDef"]:</RadzenLabel>
				<RadzenNumeric Min="36" Max="60" TValue="int" Value="Enemy.BaseDefense" ValueChanged="ChangeDefense" Style="max-width: 50px"/>
			</RadzenStack>
		</RadzenStack>
		<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
			<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
				<RadzenLabel>@Lang["Stunned"]:</RadzenLabel>
				<RadzenSwitch Value="Enemy.Stunned" ValueChanged="ChangeStunned"/>
			</RadzenStack>
			<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
				<RadzenLabel>@Lang["StunMultiplier"]:</RadzenLabel>
				<RadzenNumeric Min="125" Max="200" TValue="int" Step="25" Value="Enemy.StunMultiplier" ValueChanged="ChangeStunMultipler" Style="max-width: 60px"/>
			</RadzenStack>
		</RadzenStack>
		<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
			<RadzenLabel>@Lang["Weaknesses"]:</RadzenLabel>
			<EnumFilter Value="Enemy.Weaknesses" FilterChanged="UpdateResistances"/>
		</RadzenStack>
		<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
			<RadzenLabel>@Lang["Resistances"]:</RadzenLabel>
			<EnumFilter Value="Enemy.Resistances" FilterChanged="UpdateResistances"/>
		</RadzenStack>
	</RadzenStack>
	
	<EnemyStatsTable EntityStats="Enemy.Stats"/>
</RadzenCard>