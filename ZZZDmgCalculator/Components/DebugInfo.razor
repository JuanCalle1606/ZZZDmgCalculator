@using System.Text.Json
@typeparam TInfo where TInfo : BaseInfo

@if (ItemList is not null)
{
	<RadzenTabs TabPosition="TabPosition.Left">
		<Tabs>
			@foreach (var info in ItemList)
			{
				<RadzenTabsItem Text="@info.Id" Id="@info.Id">
					<RadzenStack>
						<RadzenLabel>Display Name: @info.DisplayName</RadzenLabel>
						<RadzenLabel>Icon:</RadzenLabel>
						<RadzenImage Path="@info.Url" AlternateText="@info.DisplayName" Style="width: min-content"/>
						<RadzenLabel>Json:</RadzenLabel>
						<RadzenTextArea Value="@JsonSerializer.Serialize(info, new JsonSerializerOptions { WriteIndented = true })"
						                Rows="25"
						                Style="width: 75%"/>
					</RadzenStack>
				</RadzenTabsItem>
			}
		</Tabs>
	</RadzenTabs>
}